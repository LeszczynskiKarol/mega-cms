# =============================================================================
# USTAWIENIA CLOUDFRONT
# =============================================================================

# Klasa cenowa (PriceClass_100 = najtaniej, tylko EU + NA)
cloudfront_price_class = "PriceClass_100"

# Cache TTL (sekundy)
cloudfront_default_ttl = 86400    # 24h
cloudfront_max_ttl     = 604800   # 7 dni

# =============================================================================
# CERTYFIKAT SSL
# =============================================================================

# Zostaw puste, żeby Terraform utworzył nowy certyfikat
acm_certificate_arn = ""
create_certificate  = true

# Lub podaj ARN istniejącego certyfikatu:
# acm_certificate_arn = "arn:aws:acm:us-east-1:123456789:certificate/xxxxx"
# create_certificate  = false

# =============================================================================
# S3
# =============================================================================

# Nazwa bucketa (zostaw puste dla automatycznej nazwy)
sites_bucket_name = ""

# OSTROŻNIE: Ustaw na true tylko w dev!
force_destroy_bucket = false
