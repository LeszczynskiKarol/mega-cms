# =============================================================================
# terraform.tfvars - Konfiguracja produkcyjna
# =============================================================================
# Skopiuj ten plik i dostosuj do swoich potrzeb.
# NIE COMMITUJ pliku z wrażliwymi danymi do repozytorium!
# =============================================================================

# Region AWS (Frankfurt - najbliżej Polski)
aws_region = "eu-central-1"

# Środowisko
environment = "prod"

# Nazwa projektu (używana w nazwach zasobów)
project_name = "kl-sites"  # zmień na swoją

# =============================================================================
# DOMENY KLIENTÓW
# =============================================================================
# Dodawaj tutaj nowych klientów. Każdy klient to osobny wpis.
# Po dodaniu uruchom: terraform plan && terraform apply
# =============================================================================

client_domains = {
  
  # ----- PRZYKŁAD: Demo strona -----
  demo = {
    domain         = "demo.twojadomena.pl"
    aliases        = []
    enabled        = true
    index_document = "index.html"
    error_document = "404.html"
  }
  
