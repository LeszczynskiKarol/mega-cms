# =============================================================================
# MultiSite CMS - Environment Variables
# =============================================================================
# Skopiuj ten plik jako .env i uzupełnij wartości
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/multisite_cms?schema=public"

# JWT Secret (wygeneruj: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key-change-this"

# Admin credentials (dla seed)
ADMIN_EMAIL="admin@twojadomena.pl"
ADMIN_PASSWORD="bezpieczne-haslo-123"

# AWS Credentials
AWS_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXX"
AWS_SECRET_ACCESS_KEY="xxxxxxxxxxxxxxxxxxxxx"

# S3 Bucket (dla mediów i stron)
S3_BUCKET="multisite-sites-123456789"
MEDIA_S3_BUCKET="multisite-media-123456789"

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID="EXXXXXXXXXX"

# Build Webhook (CI/CD)
BUILD_WEBHOOK_URL="https://your-ci-cd-webhook-url"
BUILD_WEBHOOK_SECRET="webhook-secret-key"

# App URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
