# =============================================================================
# MultiSite CMS - Development Dockerfile
# =============================================================================

FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy prisma schema
COPY prisma ./prisma

# Generate Prisma Client
RUN npx prisma generate

# Copy rest of the app
COPY . .

EXPOSE 3000

ENV NODE_ENV development
ENV PORT 3000

CMD ["npm", "run", "dev"]
